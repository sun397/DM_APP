<body class="bhaikei">
<div class="container-fluid">
 <div class="row">
  <div class="ti-ti">
   <p class="title"><%= @blog.title %></p>
   <p class="timestamp"><%= time_ago_in_words(@blog.created_at) %></p>
  </div>
  <p class="image"><%= @blog.image %></p>
  <div class="content"><%= simple_format(@blog.content) %></div>
 </div>
</div>

<div class="botan">
<%= link_to "編集", edit_blog_path(@blog), class: "btn btn-primary" %>
<%= link_to "削除", blog_path(@blog), method: :delete, class: "btn btn-primary"%>
</div>
</body>
