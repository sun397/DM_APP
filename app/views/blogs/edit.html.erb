<h1>編集</h1>
<%= form_for(@blog) do |f| %>
  <div class="field">
    <div class="form-group padding-top-15">
    <%= f.text_area :title, placeholder: "title...", class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.text_area :image, placeholder: "image...", class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.text_area :content, placeholder: "content...", rows: 10, class: "form-control" %>
    </div>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
